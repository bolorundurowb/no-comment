{
  "manifest_version": 2,
  "name": "No Comment",
  "description": "Watch videos and read articles without the comments. Form your own opinions.",
  "version": "1.0",
  "author": "Winner-Timothy Bolorunduro",
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "permissions": ["storage"],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/logo_16.png",
      "32": "images/logo_32.png",
      "64": "images/logo_64.png",
      "128": "images/logo_128.png"
    }
  },
  "icons": {
    "16": "images/logo_16.png",
    "32": "images/logo_32.png",
    "64": "images/logo_64.png",
    "128": "images/logo_128.png"
  }
}
